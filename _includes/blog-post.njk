---
layout: base.njk
---
<article class="blog-post">
    <div class="container">
        <div class="blog-layout">
            <!-- Main Content -->
            <main class="blog-content">
                <header class="post-header">
                    <h1>{{ title }}</h1>
                    <div class="post-meta">
                        <time>{{ date | dateToFormat("MMMM d, yyyy") }}</time>
                        <div class="post-tags">
                            {% for tag in tags %}
                            <span class="tag-badge">{{ tag }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </header>

                <div class="post-body">
                    {{ content | safe }}
                </div>

                <!-- Article Footer -->
                <footer class="post-footer">
                    {% if links %}
                    <div class="post-links">
                        {% if links.github %}
                        <a href="{{ links.github }}" class="post-link github">View Code</a>
                        {% endif %}
                        {% if links.demo %}
                        <a href="{{ links.demo }}" class="post-link demo">Live Demo</a>
                        {% endif %}
                    </div>
                    {% endif %}
                </footer>
            </main>

            <!-- Sidebar -->
            <aside class="blog-sidebar">
                <div class="sidebar-widget author">
                    <h3>About the Author</h3>
                    <p>{{ metadata.author.tagline }}</p>
                </div>

                <div class="sidebar-widget">
                    <h3>Recent Posts</h3>
                    <ul class="recent-posts">
                        {% for post in collections.blog | reverse | limit(5) %}
                        <li>
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="sidebar-widget">
                    <h3>Topics</h3>
                    <div class="tag-cloud">
                        {% for tag in collections.blogTags %}
                        <a href="/blog/tags/{{ tag }}" class="tag-link">{{ tag }}</a>
                        {% endfor %}
                    </div>
                </div>
            </aside>
        </div>
    </div>
</article> 